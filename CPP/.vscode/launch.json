{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "g++.exe build and debug active file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,  // Set to true to open an external terminal for output
            "MIMode": "gdb",
            "miDebuggerPath": "H:\\CodeBlocks\\MinGW\\bin\\gdb.exe",  // Ensure correct GDB path
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: g++.exe build active file",
            "internalConsoleOptions": "neverOpen"  // Avoid internal console for clearer output
        }
    ]
}
